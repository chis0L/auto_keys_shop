---
import 'bootstrap/dist/css/bootstrap.css'
import Header from "../components/header/Header.astro"
import Promo from "../components/promo/Promo.astro"
import About from "../components/about/About.astro"
import Review from '../components/review/Review.astro'
import Services from '../components/Services/Services.astro'
import Product from "../components/product/Product.astro"
import Connect from "../components/Connect/Connect.astro"
import Botton from "../components/botton/botton.astro"

---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<link href='https://fonts.googleapis.com/css?family=Inter' rel='stylesheet'>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
	<title>Astro</title>
</head>
<body>
	<Header />
	<Promo />
	<About />
	<Review />
	<Services />
	<Product />
	<Connect />
	<Botton />
	<slot />

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

	<style>
		body{
			min-height: 9200px;
		}

		@media (min-width: 1470px) {
    	body{
			flex-direction: column;
			min-height: 8000px;
			min-width: 1470px;
		}
}
	</style>
</body>
</html>

